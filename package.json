{
  "name": "wecom-kf",
  "version": "1.0.0",
  "description": "企业微信客服消息收发系统",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "start": "pnpm run build && node dist/index.js",
    "build": "ts-node build.ts",
    "build:tsc": "tsc && copy package.json dist\\ && copy .env dist\\",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test:api": "ts-node src/test/api.test.ts",
    "test:api:prod": "cross-env NODE_ENV=production ts-node src/test/api.test.ts",
    "clean": "rimraf dist",
    "build:prod": "pnpm run clean && pnpm run build",
    "start:prod": "node dist/index.js"
  },
  "keywords": [
    "wecom",
    "客服",
    "企业微信"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.14",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.2",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  }
}
