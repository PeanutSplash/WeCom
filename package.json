{
  "name": "wecom-kf",
  "version": "1.0.0",
  "description": "企业微信客服消息收发系统",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev:watch": "nodemon --watch dist/index.js dist/index.js",
    "start": "node dist/index.js",
    "build": "webpack --mode production",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test:api": "ts-node src/test/api.test.ts",
    "test:api:prod": "cross-env NODE_ENV=production ts-node src/test/api.test.ts",
    "clean": "rimraf dist",
    "build:prod": "pnpm run clean && pnpm run build",
    "start:prod": "pnpm run build && node dist/index.js",
    "docker:build": "docker build -t peanutsplash/wecom-kf:latest .",
    "docker:push": "docker push peanutsplash/wecom-kf:latest",
    "docker:build:push": "pnpm run docker:build && pnpm run docker:push",
    "docker:run": "docker run -p 3000:3000 --env-file .env peanutsplash/wecom-kf:latest",
    "docker:compose": "docker-compose up -d",
    "docker:compose:build": "docker-compose up -d --build",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "wecom",
    "客服",
    "企业微信"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/form-data": "^2.5.0",
    "axios": "^1.6.5",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.0",
    "openai": "^4.79.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xml2js": "^0.6.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.14",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "nodemon": "^3.0.2",
    "progress-bar-webpack-plugin": "^2.1.0",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
